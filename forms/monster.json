{
  "title": "Monster",
  "sections": [
    {
      "type": "group",
      "fields": [
        {
          "title": "Size",
          "type": "picker",
          "attribute": "data.size",
          "attributeType": "Size"
        },
        {
          "title": "Type",
          "type": "form",
          "text": "{{data.type|map: 'MonsterType'}} {{data.typeDetail|brackets}}",
          "form": {
            "title": "Monster Type",
            "sections": [
              {
                "title": "Type",
                "type": "picker",
                "attribute": "data.type",
                "attributeType": "MonsterType",
              },
              {
                "title": "Detail",
                "visibleIf": "{{data.type}}",
                "fields": [
                  {
                    "placeholder": "Detail",
                    "type": "textArea",
                    "attribute": "data.typeDetail"
                  }
                ]
              },
            ]
          }
        },
        {
          "title": "Alignment",
          "type": "picker",
          "attribute": "data.alignment",
          "attributeType": "Alignment"
        },
      ]
    },
    {
      "type": "group",
      "fields": [
        {
          "title": "Armor Class",
          "attribute": "data.ac"
        },
        {
          "title": "Hit Points",
          "attribute": "data.hp"
        },
        {
          "title": "Speed",
          "type": "form",
          "text": "{% include \"movement.md\" %}",
          "attribute": "data.speed",
          "form": {
            "partial": "movement"
          }
        },
      ]
    },
    {
      "type": "group",
      "fields": [
        {
          "type": "hStack",
          "fields": [
            {
              "title": "STR",
              "type": "number",
              "alignment": "top",
              "attribute": "data.abilities.str"
            },
            {
              "title": "DEX",
              "type": "number",
              "alignment": "top",
              "attribute": "data.abilities.dex"
            },
            {
              "title": "CON",
              "type": "number",
              "alignment": "top",
              "attribute": "data.abilities.con"
            },
            {
              "title": "INT",
              "type": "number",
              "alignment": "top",
              "attribute": "data.abilities.int"
            },
            {
              "title": "WIS",
              "type": "number",
              "alignment": "top",
              "attribute": "data.abilities.wis"
            },
            {
              "title": "CHA",
              "type": "number",
              "alignment": "top",
              "attribute": "data.abilities.cha"
            }
          ]
        },
      ]
    },
    {
      "type": "group",
      "fields": [
        {
          "title": "Saving Throws",
          "type": "attributes",
          "attribute": "data.savingThrows",
          "attributeType": "Ability",
          "text": "{{key|capitalize}} {{value|signed}}",
        },
        {
          "title": "Skills",
          "type": "attributes",
          "attribute": "data.skills",
          "attributeType": "Skill",
          "text": "{{key|map: 'Skill'}} {{value|signed}}",
        },
        {
          "title": "Condition Immunities",
          "type": "multiPicker",
          "attribute": "data.conditionImmunities",
          "attributeType": "Condition",
          "filter": "type == 'condition'"
        },
        {
          "title": "Damage Immunities",
          "type": "multiPicker",
          "attribute": "data.damageImmunities",
          "attributeType": "Damage"
        },
        {
          "title": "Damage Vulnerabilities",
          "type": "multiPicker",
          "attribute": "data.damageVulnerabilities",
          "attributeType": "Damage"
        },
        {
          "title": "Damage Resistances",
          "type": "multiPicker",
          "attribute": "data.damageResistances",
          "attributeType": "Damage"
        },
        {
          "title": "Senses",
          "type": "form",
          "text": "{% include \"senses.md\" %}",
          "form": {
            "partial": "senses"
          }
        },
        {
          "title": "Passive Perception",
          "type": "number",
          "attribute": "data.passivePerception",
        },
        {
          "title": "Languages",
          "type": "multiPicker",
          "attribute": "data.languages",
          "attributeType": "Language"
        },
        {
          "title": "Challenge Rating",
          "type": "picker",
          "attribute": "data.cr",
          "text": "{{value}} ({{value|map:'ChallengeRatingToXP', '0'}} XP)",
          "attributeType": "ChallengeRating"
        },
      ]
    },
    {
      "type": "group",
      "fields": [
        {
          "title": "Initiative Bonus",
          "placeholder": "Default",
          "type": "number",
          "attribute": "data.initiativeBonus"
        },
        {
          "title": "Proficiency Bonus",
          "placeholder": "Default",
          "type": "number",
          "attribute": "data.proficiencyBonus"
        },
        {
          "title": "Environments",
          "type": "multiPicker",
          "attribute": "data.environments",
          "attributeType": "Environment"
        },
      ]
    },
    {
      "title": "Traits",
      "type": "list",
      "attribute": "data.traits",
      "form": {
        "title": "Trait",
        "partial": "generic-feature"
      }
    },
    {
      "title": "Actions",
      "type": "list",
      "attribute": "data.actions",
      "form": {
        "title": "Action",
        "partial": "generic-feature"
      }
    },
    {
      "title": "Reactions",
      "type": "list",
      "attribute": "data.reactions",
      "form": {
        "title": "Reaction",
        "partial": "generic-feature"
      }
    },
    {
      "title": "Legendary Actions",
      "type": "list",
      "attribute": "data.legendaryActions",
      "form": {
        "title": "Legendary Action",
        "partial": "generic-feature"
      }
    },
    {
      "title": "Bonus Actions",
      "type": "list",
      "attribute": "data.bonusActions",
      "form": {
        "title": "Bonus Action",
        "partial": "generic-feature"
      }
    },
    {
      "title": "Mythic Actions",
      "type": "list",
      "attribute": "data.mythicActions",
      "form": {
        "title": "Mythic Action",
        "partial": "generic-feature"
      }
    },
  ]
}